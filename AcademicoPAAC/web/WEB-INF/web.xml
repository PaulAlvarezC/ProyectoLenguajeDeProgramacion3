<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>Controlador</servlet-name>
        <servlet-class>com.itq.palvarez.controlador.Controlador</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Login</servlet-name>
        <servlet-class>com.itq.palvarez.controlador.Login</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RegistrarUsuario</servlet-name>
        <servlet-class>com.itq.palvarez.controlador.RegistrarUsuario</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RegistrarAlumno</servlet-name>
        <servlet-class>com.itq.palvarez.controlador.RegistrarAlumno</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EditarAlumnoServlet</servlet-name>
        <servlet-class>com.itq.palvarez.controlador.EditarAlumnoServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RegistrarCurso</servlet-name>
        <servlet-class>com.itq.palvarez.controlador.RegistrarCurso</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RegistrarMateria</servlet-name>
        <servlet-class>com.itq.palvarez.controlador.RegistrarMateria</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RegistrarNotas</servlet-name>
        <servlet-class>com.itq.palvarez.controlador.RegistrarNotas</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Controlador</servlet-name>
        <url-pattern>/Controlador</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/Login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RegistrarUsuario</servlet-name>
        <url-pattern>/RegistrarUsuario</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RegistrarAlumno</servlet-name>
        <url-pattern>/RegistrarAlumno</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EditarAlumnoServlet</servlet-name>
        <url-pattern>/EditarAlumnoServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RegistrarCurso</servlet-name>
        <url-pattern>/RegistrarCurso</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RegistrarMateria</servlet-name>
        <url-pattern>/RegistrarMateria</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RegistrarNotas</servlet-name>
        <url-pattern>/RegistrarNotas</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
